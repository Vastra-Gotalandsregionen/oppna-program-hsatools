<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">
	<var name="settings" bean="Search.SettingsContainer" />
	<var name="unitSearchSimpleForm"
		class="se.vgregion.kivtools.search.presentation.forms.UnitSearchSimpleForm"
		scope="flow" />
	<var name="vardvalInfo" class="se.vgregion.kivtools.search.svc.ws.vardval.VardvalInfo"
		scope="flow" />
	<input-mapper>
		<input-attribute name="hsaidentity" />
		<input-attribute name="ssn" />
	</input-mapper>
	<start-state idref="Display.displayRegistration" />
	<!--
		TODO confirmRegistrationChanges.xhtml should perhaps be protected and
		put in a secure (/secure) folder?
	-->
	<view-state id="Display.displayRegistration" view="/confirmRegistrationChanges.xhtml">
		<render-actions>
			<bean-action bean="Controller.registerOnUnit" method="getUnitRegistrationInformation">
				<method-arguments>
					<argument expression="externalContext" />
					<argument expression="requestParameters.hsaidentity" />
				</method-arguments>
				<method-result name="vardvalInfo" scope="flow" />
			</bean-action>
		</render-actions>
		<transition
			on-exception="se.vgregion.kivtools.search.presentation.exceptions.VardvalRegistrationException"
			to="Display.registrationError">
		</transition>
		<transition on="doConfirm" to="Action.preChangeRegistration" />
		<transition on="doCancel" to="Redirect.backToUnit" />
		<transition on="gotoCaretypes" to="Display.caretypes" />
		<transition on="gotoStartpage" to="Display.startpage" />
	</view-state>
	<action-state id="Action.preChangeRegistration">
		<bean-action bean="Controller.registerOnUnit" method="preCommitRegistrationOnUnit">
			<method-arguments>
				<argument expression="flowScope.vardvalInfo" />
				<argument expression="externalContext" />
			</method-arguments>
			<method-result name="redirectUrl" scope="flow" />
		</bean-action>
		<transition to="Redirect.toSignatureService" />
	</action-state>

	<view-state id="Display.registrationError" view="/registrationError.xhtml">
		<transition on="gotoCaretypes" to="Display.caretypes" />
		<transition on="gotoStartpage" to="Display.startpage" />
	</view-state>
	<end-state id="Redirect.backToUnit"
		view="externalRedirect:/displayUnitDetails.jsf?_flowId=HRIV.Search.searchunit-flow&amp;hsaidentity=${flowScope.hsaidentity}" />
	<end-state id="Redirect.toSignatureService" view="externalRedirect:${flowScope.redirectUrl}" />
</flow>