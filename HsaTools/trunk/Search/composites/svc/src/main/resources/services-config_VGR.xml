<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!--
		Use this mock-injection if connection to KIV is disabled <bean
		id="Search.SearchService"
		class="se.vgregion.kivtools.search.svc.impl.mock.SearchServiceMockImpl"
		/>
	-->
	<!--
		Use this block of injections if connection to KIV is enabled <bean
		id="Search.SearchService"
		class="se.vgregion.kivtools.search.svc.impl.kiv.ldap.SearchServiceNovellLdapImpl">
		<property name="ldapConnectionPool"
		ref="Search.LdapConnectionPool"></property> </bean>
	-->

	<!--  -->
	<bean id="Search.SearchService"
		class="se.vgregion.kivtools.search.svc.impl.kiv.ldap.SearchServiceLdapImpl">
		<property name="personRepository" ref="Search.PersonRepository"></property>
		<property name="unitRepository" ref="Search.UnitRepository"></property>
		<property name="employmentRepository" ref="Search.EmploymentRepository"></property>
		<property name="healthcareTypeConditionHelper" ref="Search.HealthcareTypeConditionHelper"></property>
	</bean>

	<bean id="Search.PersonRepository"
		class="se.vgregion.kivtools.search.svc.impl.kiv.ldap.PersonRepository">
		<property name="ldapConnectionPool" ref="Search.LdapConnectionPool"></property>
		<property name="codeTablesService" ref="Search.CodeTablesService"></property>
		<property name="unitFkField" value="vgrOrgRel" />
	</bean>
	<bean id="Search.UnitRepository"
		class="se.vgregion.kivtools.search.svc.impl.kiv.ldap.UnitRepository">
		<property name="ldapConnectionPool" ref="Search.LdapConnectionPool"></property>
		<property name="codeTablesService" ref="Search.CodeTablesService"></property>
	</bean>
	<bean id="Search.EmploymentRepository"
		class="se.vgregion.kivtools.search.svc.impl.kiv.ldap.EmploymentRepository">
		<property name="ldapConnectionPool" ref="Search.LdapConnectionPool"></property>
	</bean>
	<bean id="Search.HealthcareTypeConditionHelper"
		class="se.vgregion.kivtools.search.svc.domain.values.HealthcareTypeConditionHelper">
		<property name="implResourcePath"
			value="se.vgregion.kivtools.search.svc.impl.kiv.ldap.search-composite-svc-healthcare-type-conditions"></property>
	</bean>
	<bean id="Search.MunicipalityHelper"
		class="se.vgregion.kivtools.search.svc.domain.values.MunicipalityHelper">
		<property name="implResourcePath"
			value="se.vgregion.kivtools.search.svc.impl.kiv.ldap.search-composite-svc-municipalities"></property>
	</bean>

	<bean id="Search.LdapConnectionPool"
		class="se.vgregion.kivtools.search.svc.impl.kiv.ldap.LdapConnectionPool"
		destroy-method="release">
		<property name="ldapHost" value="${hsatools.search.svc.ldap.ldaphost}" />
		<property name="loginDN" value="${hsatools.search.svc.ldap.logindn}" />
		<property name="password" value="${hsatools.search.svc.ldap.password}" />
		<property name="maxConn" value="${hsatools.search.svc.ldap.maxConn}" />
	</bean>
	<!-- LDAP connection settings  -->
	<bean id="propertyPlaceholder"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="classpath:se/vgregion/kivtools/search/svc/impl/kiv/ldap/search-composite-svc-connection.properties" />
	</bean>

	<!--  Code table service. TODO: schedule -->
	<bean id="Search.CodeTablesService"
		class="se.vgregion.kivtools.search.svc.codetables.impl.vgr.CodeTablesServiceImpl"
		init-method="init" depends-on="Search.LdapConnectionPool">
		<property name="ldapConnectionPool" ref="Search.LdapConnectionPool" />
	</bean>

	<bean id="jobDetailCodeTableCacheUpdate"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="Search.CodeTablesService" />
		<property name="targetMethod" value="init" />
		<property name="concurrent" value="false" />
	</bean>
	
	<bean id="jobDetailUnitDetailsPusher"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="Push.Eniro" />
		<property name="targetMethod" value="doService" />
		<property name="concurrent" value="false" />
	</bean>

	<bean id="simpleTriggerCodeTableCacheUpdate" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<!-- see the example of method invoking job above -->
		<property name="jobDetail" ref="jobDetailCodeTableCacheUpdate" />
		<!-- 10 seconds -->
		<property name="startDelay" value="10000" />
		<!-- repeat every 24 hours -->
		<property name="repeatInterval" value="86400000" />
	</bean>

	<bean id="simpleTriggerUnitDetailsPusher" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<!-- see the example of method invoking job above -->
		<property name="jobDetail" ref="jobDetailUnitDetailsPusher" />
		<!-- 10 seconds -->
		<property name="startDelay" value="10000" />
		<!-- repeat every 24 hours -->
		<property name="repeatInterval" value="86400000" />
	</bean>

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="simpleTriggerCodeTableCacheUpdate" />
				<ref bean="simpleTriggerUnitDetailsPusher"/>
			</list>
		</property>
	</bean>

	<bean id="Push.Eniro"
		class="se.vgregion.kivtools.search.svc.push.impl.eniro.InformationPusherEniro">
		<property name="unitRepository" ref="Search.UnitRepository" />
		<property name="destinationFolder" value="/tmp/" />
		<property name="lastSynchedModifyDateFile" value="/tmp/lsmdf.txt" />
		<property name="lastExistingUnitsFile" value="/tmp/leuf.txt" />
	</bean>

</beans>
